<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.brookezb.bhs.mapper.RoleMapper">
    <resultMap id="roleMap" type="top.brookezb.bhs.model.Role">
        <id property="rid" column="rid"/>
        <result property="name" column="name"/>
        <collection property="permissions" column="rid"
                    select="selectPermissions"/>
    </resultMap>

    <insert id="insert">
        insert into bhs_role(name)
        values (#{name})
    </insert>

    <insert id="insertPermission">
        insert into bhs_permission(rid, permission)
        values (#{rid}, #{permission})
    </insert>

    <delete id="delete">
        delete from bhs_role
        where rid = #{rid}
    </delete>

    <delete id="deletePermission">
        delete from bhs_permission
        where rid = #{rid} and permission = #{permission}
    </delete>

    <delete id="clearPermission">
        delete from bhs_permission
        where rid = #{rid}
    </delete>

    <select id="selectById" resultMap="roleMap">
        select rid, name
        from bhs_role
        where rid = #{rid}
    </select>

    <select id="selectPermissions" resultType="string">
        select permission
        from bhs_permission
        where rid = #{rid}
    </select>
</mapper>
