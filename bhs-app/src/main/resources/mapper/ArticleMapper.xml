<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.brookezb.bhs.mapper.ArticleMapper">
    <resultMap id="articleMap" type="top.brookezb.bhs.model.Article">
        <id property="aid" column="aid"/>
        <result property="uid" column="uid"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="picture" column="picture"/>
        <result property="content" column="content"/>
        <result property="commentabled" column="commentabled"/>
        <result property="appreciatabled" column="appreciatabled"/>
        <result property="created" column="created"/>
        <result property="modified" column="modified"/>
        <result property="published" column="published"/>
        <result property="views" column="views"/>
        <association property="category" column="cid" select=""/><!-- TODO 完善分类查询 -->
        <collection property="tags" column="aid" select="selectTags"/>
    </resultMap>

    <insert id="insert">
        insert into bhs_article(aid, uid, cid, title, description, picture, content, commentabled, appreciatabled,
                                published)
        values (#{aid}, #{uid}, #{category.cid}, #{title}, #{description}, #{picture}, #{content},
                #{commentabled}, #{appreciatabled}, #{published})
    </insert>

    <update id="update">
        update bhs_article
        set cid            = #{category.cid},
            title          = #{title},
            description    = #{description},
            picture        = #{picture},
            content        = #{content},
            commentabled   = #{commentabled},
            appreciatabled = #{appreciatabled}
        where aid = #{aid}
    </update>

    <delete id="delete">
        delete
        from bhs_article
        where aid = #{id}
    </delete>

    <select id="selectById" resultType="top.brookezb.bhs.model.Article">
        select *
        from bhs_article
        <where>
            <if test="published == true">
                and published = 1
            </if>
            <if test="chooseDelayed == false">
                and created &lt; CURRENT_TIMESTAMP
            </if>
            and aid = #{id}
        </where>
    </select>

    <select id="selectTags" resultType="java.lang.String">
        select bt.name
        from bhs_tag_relation
                 inner join bhs_tag bt on bhs_tag_relation.tid = bt.tid
        where aid = #{id}
    </select>

    <select id="selectAll" resultType="top.brookezb.bhs.model.Article">
        select *
        from bhs_article
        <where>
            <if test="title != null">
                and title like concat('%', #{title}, '%')
            </if>
            <if test="published != null">
                and published = #{published}
            </if>
            and created &lt; CURRENT_TIMESTAMP
        </where>
    </select>
</mapper>
